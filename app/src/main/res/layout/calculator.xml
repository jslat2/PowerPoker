<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Home"
        android:id="@+id/textView"
        android:gravity="center_vertical"
        android:textColor="#ffffff"
        android:fontFamily="Roboto"
        android:background="#03a9f4"
        android:paddingLeft="20dp"/>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/lin1"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/menu" >

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:text="Player Notes"
            android:id="@+id/menuPlNotes"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/button6"
            android:layout_toEndOf="@+id/button6"
            android:focusableInTouchMode="false"
            android:onClick="openPlayerNotes"
            android:textSize="12dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:text="Bank"
            android:id="@+id/button4"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/button5"
            android:layout_toStartOf="@+id/button5"
            android:onClick="openBankroll"
            android:textSize="12dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:text="Session Log"
            android:id="@+id/button5"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="12dp"
            android:onClick="openSessionLog" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:text="Hand Log"
            android:id="@+id/button6"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/button5"
            android:layout_toEndOf="@+id/button5"
            android:textSize="12dp"
            android:onClick="openHandLog" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:text="Home"
            android:id="@+id/button7"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/button4"
            android:layout_toStartOf="@+id/button4"
            android:textSize="12dp" />
    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Calculate Equity"
        android:id="@+id/calcEquity"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:textColor="#ffffff"
        android:background="@drawable/red_button"
        android:fontFamily="Roboto" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lin1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/light_border"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_above="@+id/calcEquity">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hero"
            android:id="@+id/button9"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:onClick="openHeroCards"
            android:background="@drawable/light_button"
            android:layout_marginTop="20dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/heroHan"
            android:hint="&lt;--- Please Edit Hand"
            android:textColor="#000000"
            android:enabled="true"
            android:editable="true"
            android:layout_alignBottom="@+id/button9"
            android:layout_toRightOf="@+id/button9"
            android:layout_toEndOf="@+id/button9" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opponent"
            android:id="@+id/button10"
            android:onClick="openOppOneCards"
            android:background="@drawable/light_button"
            android:layout_below="@+id/button9"
            android:layout_alignLeft="@+id/button9"
            android:layout_alignStart="@+id/button9"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/oppOneHand"
            android:hint="&lt;--- Please Edit Hand"
            android:textColor="#000000"
            android:editable="true"
            android:enabled="true"
            android:layout_alignBottom="@+id/button10"
            android:layout_toRightOf="@+id/button10"
            android:layout_toEndOf="@+id/button10" />

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/equity"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Equity"
            android:id="@+id/textView4"
            android:layout_alignTop="@+id/equity"
            android:layout_toLeftOf="@+id/equity"
            android:layout_toStartOf="@+id/equity" />
    </RelativeLayout>

</RelativeLayout>