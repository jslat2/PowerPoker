<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/depositAmount"
        android:hint="Amount"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp" />

    <Button
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/button12"
        android:background="@drawable/medium_button"
        android:singleLine="false"
        android:onClick="saveDeposit"
        android:layout_below="@+id/depositAmount"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <Button
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:id="@+id/depositExit"
        android:background="@drawable/medium_button"
        android:layout_below="@+id/depositAmount"
        android:layout_alignRight="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Please Enter Amount"
        android:id="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout><!-- From: file:/home/rockit/Desktop/projects/powerpoker/app/src/main/res/layout/deposit_popup.xml -->