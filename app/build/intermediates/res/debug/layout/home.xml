            android:layout_alignTop="@+id/sessionsButton"
            android:layout_toLeftOf="@+id/notesButton"
            android:layout_toStartOf="@+id/notesButton"
            android:layout_weight="1"
            android:fontFamily="Roboto"
            android:textColor="#ffffff" />

        <Button
