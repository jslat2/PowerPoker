<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Home"
        android:id="@+id/textView"
        android:gravity="center_vertical"
        android:textColor="#ffffff"
        android:fontFamily="Roboto"
        android:background="#03a9f4"
        android:paddingLeft="20dp"/>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/lin1"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/menu" >

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:text="Player Notes"
            android:id="@+id/menuPlNotes"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/button6"
            android:layout_toEndOf="@+id/button6"
            android:focusableInTouchMode="false"
            android:onClick="openPlayerNotes"
            android:textSize="12dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:text="Bank"
            android:id="@+id/button4"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/button5"
            android:layout_toStartOf="@+id/button5"
            android:onClick="openBankroll"
            android:textSize="12dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:text="Session Log"
            android:id="@+id/button5"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="12dp"
            android:onClick="openSessionLog" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:text="Hand Log"
            android:id="@+id/button6"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/button5"
            android:layout_toEndOf="@+id/button5"
            android:textSize="12dp"
            android:onClick="openHandLog" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:text="Home"
            android:id="@+id/button7"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/button4"
            android:layout_toStartOf="@+id/button4"
            android:textSize="12dp" />
    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Quick Calculator"
        android:id="@+id/button8"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:textColor="#ffffff"
        android:background="@drawable/red_button"
        android:fontFamily="Roboto"
        android:onClick="openCalculator" />

    <view
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        class="com.jjoe64.graphview.GraphView"
        android:id="@+id/graph"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/button8"
        android:layout_below="@+id/lin1" />

</RelativeLayout><!-- From: file:/C:/Users/Gaming/AndroidStudioProjects/PowerPoker/app/src/main/res/layout/home.xml -->